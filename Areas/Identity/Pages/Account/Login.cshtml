@page
@model LoginModel

@{
    ViewData["Title"] = "RSVP Login";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.RsvpCode">RSVP Code</label>
                        <input asp-for="Input.RsvpCode" class="form-control" />
                        <span asp-validation-for="Input.RsvpCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Enter</button>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h4>How To Login</h4>
                <hr />
                <div>
                    <p>
                        <b>We haven't sent out wedding invitations yet (it's only November!)</b>
                        <br />
                        Enter the code on the wedding invitation to login.
                        <br />
                        If something isn't working, please email Gustave Granroth at <a href="mailto:gus.gran@outlook.com">gus.gran@outlook.com</a>.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
